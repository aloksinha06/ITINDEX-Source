@model ITINDEXAU.Models.Forgot
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="forgot-content">
    @using (Html.BeginForm()){
    <table>
        <tr>
            <td colspan="4">
                <h2>Forgot Password</h2>
            </td>
        </tr>
        <tr>
            <td colspan="4">
                <div class="validation-error">
                @Html.ValidationSummary()
                </div>
            </td>
        </tr>
        <tr>
            <td>@Html.LabelFor(m=>m.EmailAddress)</td>
            <td>:</td>
            <td>@Html.TextBoxFor(m => m.EmailAddress, new {@class="text-field",@placeholder="  [Email Address]" })</td>
            <td class="validation-error-msg">@Html.ValidationMessageFor(m=>m.EmailAddress)</td>
        </tr>
        <tr><td colspan="4"></td></tr>
        <tr>
            <td></td>
            <td></td>
            <td style="text-align:right;"><input type="submit" value="Send Password" class="button-login" /></td>
            <td></td>
        </tr>
    </table>
    }
</div>
